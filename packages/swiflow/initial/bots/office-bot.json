{
  "mcpServers": {
    "pdf-reader": {
      "command": "uvx",
      "args": [
        "mcp-pdf-reader"
      ],
      "env": {
        "PDF_DIR": "$CURRENT_HOME"
      }
    },
    "excel-server": {
      "command": "uvx",
      "args": [
        "mcp-excel-tools",
        "stdio"
      ],
      "env": {
        "EXCEL_FILES_PATH": "$CURRENT_HOME"
      }
    }
  }
}