{
  "version": "0.7.3",
  "productName": "Swiflow",
  "identifier": "com.option.swiflow",
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Swiflow",
        "width": 1200,
        "height": 800,
        "minWidth": 450,
        "minHeight": 560,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "dragDropEnabled": false
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "*/**"
        ]
      },
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "font-src": [
          "https://fonts.gstatic.com"
        ],
        "script-src": "'self' 'unsafe-inline' 'unsafe-eval' data:",
        "worker-src": "'self' blob: data:",
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "style-src": "'self' blob: data: 'unsafe-inline' https://fonts.googleapis.com",
        "connect-src": "'self' ipc://localhost ws://localhost http://localhost:11235 ws://localhost:11235"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "deep-link": {
      "desktop": {
        "schemes": [
          "swiflow"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/main"
    ]
  }
}